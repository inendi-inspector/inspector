[Unit]
Description=NICE DCV session launcher for Inspector
After=dcvserver.service

[Service]
Type=oneshot
RemainAfterExit=yes
User=
ExecStart=/usr/bin/dcv create-session --type=virtual --user= --owner= --gl on --init /etc/dcv/dcvsessioninit dcv_session
ExecStop=/usr/bin/dcv close-session dcv_session

[Install]
WantedBy=multi-user.target
